{
  "data_dir": "medical_data",
  "dataset": "slake",
  "image_size": 1024,
  "sam2_config": "sam2_hiera_t.yaml",
  "checkpoint": "checkpoints/sam2_hiera_tiny.pt",
  "lora_r": 4,
  "lora_alpha": 8,
  "lora_dropout": 0.05,
  "target_modules": [
    "qkv",
    "proj"
  ],
  "epochs": 5,
  "batch_size": 2,
  "learning_rate": 0.0001,
  "weight_decay": 0.01,
  "gradient_accumulation_steps": 16,
  "warmup_ratio": 0.1,
  "max_grad_norm": 1.0,
  "use_amp": true,
  "val_split": 0.1,
  "val_every_n_epochs": 1,
  "output_dir": "checkpoints/production/sam2",
  "save_every_n_epochs": 1,
  "max_samples": 0,
  "early_stopping": "EarlyStoppingConfig(enabled=True, patience=5, min_delta=0.005, loss_threshold=0.1, dice_threshold=0.9, eval_interval=50)"
}